<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.win7.ytdemo.activity.PwdNotifyActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_newpwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/newpwd"
            android:layout_gravity="center"
            android:background="@null"
            android:maxLength="16"
            android:inputType="textPassword"
            android:layout_weight="20"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="4" />
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@color/bottom_button_text_blue"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="200"
            android:layout_gravity="bottom"
            android:background="@color/bottom_button_text_blue"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@color/bottom_button_text_blue"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    <EditText
        android:id="@+id/et_repeatpwd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:hint="@string/repeatpwd"
        android:layout_gravity="center"
        android:background="@null"
        android:maxLength="16"
        android:inputType="textPassword"
        android:layout_weight="20"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="4" />
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@color/bottom_button_text_blue"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="200"
            android:layout_gravity="bottom"
            android:background="@color/bottom_button_text_blue"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="@color/bottom_button_text_blue"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="4" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/login_button_style"
        android:layout_gravity="center"
        android:text="@string/submit"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>
</LinearLayout>
